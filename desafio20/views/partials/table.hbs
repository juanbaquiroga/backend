<div style="background-color:rgba(97, 97, 97, 0.107); width:70%; border-radius:10px; margin:20px; padding:15px">
    <h1 style="text-align: center;">tabla de productos</h1>
    <div style="display: flex; justify-content:center">
    <div style="display:flex; flex-flow:row wrap; gap:10px">
        {{#each products}}
            <div style="width:224px ;display:flex; flex-flow:column; background-color: rgb(255, 255, 255); padding-top:12px; border-radius: 15px; align-items:center; gap:5px; justify-content:space-between">
                <img style="width: 200px; border-radius:7px;" src={{this.img}} alt={{this.title}}>
                <h3>{{this.name}}</h3>
                <b>usd${{this.usdPrice}}</b>
                <b>ars${{this.arsPrice}}</b>
                <b>uyu${{this.uyuPrice}}</b>
                <form style="width: 100%; margin-bottom:0" action="/add" method="post">
                    <input type="hidden" value="{{this._id}}" name="prodId"/>
                    <input style="width: 100%; border:none; backgroun: rgb(44, 44, 44); border-radius: 0 0 15px 15px; padding: 3px" type="submit" name="" id="" value="Add to cart">
                </form>
            </div>
        {{/each}}
    </div>
    </div>
</div>